# Save exact versions on install (avoid unexpected semver drift)
save-exact=true

# Use npm registry (can be swapped to a private registry via env in CI)
registry=https://registry.npmjs.org/

# Always use lockfile integrity checking
package-lock=true

# Disable package auditing & funding prompts in CI for cleaner logs
fund=false
audit=false

# Prefer offline cache if available
prefer-offline=true

# Strict TLS
strict-ssl=true

# Enable workspaces if later adopted (harmless if none)
workspaces-update=false

# Cache folder (commented â€“ default is fine)
# cache=.npm-cache

# Legacy peer deps off (we want modern resolution)
legacy-peer-deps=false

# Enable provenance for published packages (ignored for private project unless publishing)
provenance=true

# Allow scripts (can be set to false in high-security CI)
ignore-scripts=false
