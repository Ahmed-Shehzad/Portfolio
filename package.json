{
  "name": "portfolio",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run worker:watch & next dev",
    "build": "npm run build:worker && next build",
    "prebuild": "npm run fix",
    "start": "next start",
    "lint": "next lint",
    "build:worker": "tsc -p tsconfig.worker.json",
    "worker:watch": "tsc -p tsconfig.worker.json -w",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ci": "CI=1 vitest run --coverage && node scripts/convert-junit-to-generic.mjs coverage/sonar-report.xml coverage/generic-report.xml",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --list-different .",
    "lint:fix": "next lint --fix",
    "check": "npm run format:check && npm run lint",
    "fix": "npm run format:fix && npm run lint:fix",
    "docs:validate": "./scripts/validate-docs.sh",
    "docs:lint": "./scripts/lint-docs.sh",
    "vercel-build": "npm run build",
    "sonar:up": "docker compose -f docker-compose.sonar.yml up -d --wait",
    "sonar:down": "docker compose -f docker-compose.sonar.yml down",
    "sonar:scan": "SONAR_TOKEN=$SONAR_TOKEN docker compose -f docker-compose.sonar.yml run --rm sonar-scanner",
    "prepare": "husky"
  },
  "dependencies": {
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tanstack/react-query": "5.85.6",
    "@tanstack/react-query-devtools": "5.85.5",
    "axios": "1.11.0",
    "browserslist": "^4.25.4",
    "leaflet": "^1.9.4",
    "next": "^15.5.2",
    "puppeteer": "24.17.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-leaflet": "^5.0.0",
    "sharp": "^0.34.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@hint/configuration-web-recommended": "8.2.24",
    "@hint/connector-jsdom": "4.1.28",
    "@next/bundle-analyzer": "^15.5.2",
    "@next/eslint-plugin-next": "^15.5.2",
    "@tanstack/eslint-plugin-query": "5.83.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.20",
    "@types/node": "^24.3.0",
    "@types/puppeteer": "7.0.4",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-sonarjs": "3.0.5",
    "hint": "7.1.13",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sonarjs": "1.0.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "patchedDependencies": {}
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css,scss}": [
      "prettier --write"
    ]
  }
}
